<h1>User registration</h1>

<%= form_for(:user, :url => {:controller => 'user'}) do |f| %>
   <% if @user.errors.any? %>
   		<ul>
   			<% @user.errors.full_messages do |msg| %>
   			<li><%= msg %></li>
   			<%end%>
   		</ul>	
   	<%end%>

   	<p><%= f.label :name %><br>
   	<%= f.text_field :name %></p>
   	<p><%= f.label :email %><br>
   	<%= f.text_field :email %></p>
   	<p><%= f.label :phone %><br>
   	<%= f.text_field :phone %></p>

   	<%= f.submit %>
<%end%>   	